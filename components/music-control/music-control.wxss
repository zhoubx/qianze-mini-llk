.music-btn {
  position: fixed;
  top: 30rpx;
  right: 30rpx;
  width: 50rpx;
  height: 50rpx;
  background: #eee;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  z-index: 1000;
}

.music-btn:active {
  transform: scale(0.95);
}

.music-btn.playing {
  background: #4a7c59;
  color: white;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
