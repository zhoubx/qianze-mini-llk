.champion-celebration {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 9999;
  opacity: 0;
  transition: opacity 0.5s;
}

.champion-celebration.show {
  opacity: 1;
}

/* 奖杯样式 */
.trophy {
  text-align: center;
  margin-bottom: 40rpx;
  animation: trophyBounce 2s ease-in-out infinite;
}

.trophy-icon {
  font-size: 180rpx;
  margin-bottom: 20rpx;
  animation: trophyGlow 1.5s ease-in-out infinite alternate;
}

/* 金色大奖杯 - 冠军 */
.trophy.gold .trophy-icon {
  filter: drop-shadow(0 0 30rpx #FFD700) drop-shadow(0 0 60rpx rgba(255, 215, 0, 0.8));
  animation: goldTrophyGlow 1.5s ease-in-out infinite alternate;
}

/* 银色大奖杯 - 亚军 */
.trophy.silver .trophy-icon {
  filter: grayscale(1) brightness(1.1) contrast(1.5) saturate(0.3) drop-shadow(0 0 25rpx #A8B0B8) drop-shadow(0 0 50rpx rgba(160, 175, 190, 0.7));
  animation: silverTrophyGlow 1.5s ease-in-out infinite alternate;
}

/* 大铜牌样式 - 季军 */
.medal-icon {
  font-size: 200rpx;
  margin-bottom: 20rpx;
  filter: drop-shadow(0 0 30rpx #CD7F32) drop-shadow(0 0 60rpx rgba(205, 127, 50, 0.8));
  animation: bronzeMedalGlow 1.5s ease-in-out infinite alternate;
}

/* 金色奖杯发光动画 */
@keyframes goldTrophyGlow {
  0% { 
    filter: drop-shadow(0 0 30rpx #FFD700) drop-shadow(0 0 60rpx rgba(255, 215, 0, 0.6));
    transform: scale(1);
  }
  100% { 
    filter: drop-shadow(0 0 50rpx #FFD700) drop-shadow(0 0 100rpx rgba(255, 215, 0, 1));
    transform: scale(1.05);
  }
}

/* 银色奖杯发光动画 */
@keyframes silverTrophyGlow {
  0% { 
    filter: grayscale(1) brightness(1.1) contrast(1.5) drop-shadow(0 0 30rpx #E8E8E8) drop-shadow(0 0 60rpx rgba(220, 220, 220, 0.7));
    transform: scale(1);
  }
  100% { 
    filter: grayscale(1) brightness(1.4) contrast(1.5) drop-shadow(0 0 70rpx #FFFFFF) drop-shadow(0 0 100rpx rgba(255, 255, 255, 0.9));
    transform: scale(1.05);
  }
}

/* 铜牌发光动画 */
@keyframes bronzeMedalGlow {
  0% { 
    filter: drop-shadow(0 0 30rpx #CD7F32) drop-shadow(0 0 60rpx rgba(205, 127, 50, 0.6));
    transform: scale(1);
  }
  100% { 
    filter: drop-shadow(0 0 50rpx #E8A050) drop-shadow(0 0 100rpx rgba(232, 160, 80, 1));
    transform: scale(1.05);
  }
}

.trophy-text {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 0 10rpx rgba(0,0,0,0.5);
}

@keyframes trophyBounce {
  0%, 100% { transform: scale(1) translateY(0); }
  50% { transform: scale(1.1) translateY(-20rpx); }
}

@keyframes trophyGlow {
  0% { filter: brightness(1); }
  100% { filter: brightness(1.5); }
}

/* 礼花动画 */
.fireworks {
  position: absolute;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.firework {
  position: absolute;
  font-size: 40rpx;
  animation: fireworkExplode 3s ease-out infinite;
}

.firework-1 { top: 20%; left: 20%; animation-delay: 0s; }
.firework-2 { top: 15%; right: 25%; animation-delay: 0.5s; }
.firework-3 { top: 30%; left: 70%; animation-delay: 1s; }
.firework-4 { top: 70%; right: 15%; animation-delay: 1.5s; }
.firework-5 { top: 75%; left: 80%; animation-delay: 2s; }
.firework-6 { top: 50%; left: 10%; animation-delay: 2.5s; }

@keyframes fireworkExplode {
  0% {
    opacity: 0;
    transform: scale(0) rotate(0deg);
  }
  20% {
    opacity: 1;
    transform: scale(1.2) rotate(180deg);
  }
  40% {
    opacity: 1;
    transform: scale(0.8) rotate(360deg);
  }
  60% {
    opacity: 0.8;
    transform: scale(1.5) rotate(540deg);
  }
  100% {
    opacity: 0;
    transform: scale(2) rotate(720deg);
  }
}

/* 庆祝文字 */
.celebration-text {
  text-align: center;
  color: white;
  margin-top: 40rpx;
}

.congrats {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-shadow: 0 0 10rpx rgba(0,0,0,0.5);
  animation: textGlow 2s ease-in-out infinite alternate;
}

.prize-info {
  font-size: 28rpx;
  opacity: 0.9;
}

@keyframes textGlow {
  0% { text-shadow: 0 0 10rpx rgba(255,255,255,0.5); }
  100% { text-shadow: 0 0 20rpx rgba(255,255,255,1); }
}
