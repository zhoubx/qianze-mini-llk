.champion-celebration {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 9999;
  opacity: 0;
  transition: opacity 0.5s;
}

.champion-celebration.show {
  opacity: 1;
}

/* 奖杯样式 */
.trophy {
  text-align: center;
  margin-bottom: 40rpx;
  animation: trophyBounce 2s ease-in-out infinite;
}

.trophy-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  animation: trophyGlow 1.5s ease-in-out infinite alternate;
}

.trophy.gold .trophy-icon {
  color: #FFD700;
  text-shadow: 0 0 20rpx #FFD700;
}

.trophy.silver .trophy-icon {
  color: #C0C0C0;
  text-shadow: 0 0 20rpx #C0C0C0;
}

.trophy.bronze .trophy-icon {
  color: #CD7F32;
  text-shadow: 0 0 20rpx #CD7F32;
}

.trophy-text {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 0 10rpx rgba(0,0,0,0.5);
}

@keyframes trophyBounce {
  0%, 100% { transform: scale(1) translateY(0); }
  50% { transform: scale(1.1) translateY(-20rpx); }
}

@keyframes trophyGlow {
  0% { filter: brightness(1); }
  100% { filter: brightness(1.5); }
}

/* 礼花动画 */
.fireworks {
  position: absolute;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.firework {
  position: absolute;
  font-size: 40rpx;
  animation: fireworkExplode 3s ease-out infinite;
}

.firework-1 { top: 20%; left: 20%; animation-delay: 0s; }
.firework-2 { top: 15%; right: 25%; animation-delay: 0.5s; }
.firework-3 { top: 30%; left: 70%; animation-delay: 1s; }
.firework-4 { top: 70%; right: 15%; animation-delay: 1.5s; }
.firework-5 { top: 75%; left: 80%; animation-delay: 2s; }
.firework-6 { top: 50%; left: 10%; animation-delay: 2.5s; }

@keyframes fireworkExplode {
  0% {
    opacity: 0;
    transform: scale(0) rotate(0deg);
  }
  20% {
    opacity: 1;
    transform: scale(1.2) rotate(180deg);
  }
  40% {
    opacity: 1;
    transform: scale(0.8) rotate(360deg);
  }
  60% {
    opacity: 0.8;
    transform: scale(1.5) rotate(540deg);
  }
  100% {
    opacity: 0;
    transform: scale(2) rotate(720deg);
  }
}

/* 庆祝文字 */
.celebration-text {
  text-align: center;
  color: white;
  margin-top: 40rpx;
}

.congrats {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-shadow: 0 0 10rpx rgba(0,0,0,0.5);
  animation: textGlow 2s ease-in-out infinite alternate;
}

.prize-info {
  font-size: 28rpx;
  opacity: 0.9;
}

@keyframes textGlow {
  0% { text-shadow: 0 0 10rpx rgba(255,255,255,0.5); }
  100% { text-shadow: 0 0 20rpx rgba(255,255,255,1); }
}
