/* pages/prizes/prizes.wxss */
.container {
  padding: 20rpx;
  background: #f4f7f6;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* ==================== 页面标题 ==================== */
.page-header {
  padding: 24rpx 30rpx 20rpx;
  background: #fff;
  border-radius: 16rpx;
  margin: 0 10rpx 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.header-main {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.header-icon {
  font-size: 44rpx;
  margin-right: 12rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #4a7c59;
}

.header-tips {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.tip-dot {
  color: #4a7c59;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.tip-text {
  flex: 1;
}

.tip-highlight .tip-dot {
  color: #f57c00;
}

.tip-highlight .tip-text {
  color: #f57c00;
  font-weight: 500;
}

/* ==================== 奖品列表 ==================== */
.list {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.empty { text-align: center; color: #999; margin-top: 100rpx; font-size: 28rpx; }

.card {
  background: white;
  padding: 24rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  position: relative;
  overflow: hidden;
}

/* 左侧状态条 */
.card::before {
  content: ''; position: absolute; left: 0; top: 0; bottom: 0; width: 8rpx;
}
.card.pending::before { background: #d4a017; }
.card.used::before { background: #4a7c59; }
.card.expired::before { background: #ccc; }

/* 整体变灰效果 */
.card.expired { opacity: 0.6; background: #fafafa; }
.card.used { opacity: 0.8; background: #fcfcfc; }

.card-left {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.prize-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

/* 数据详情行 */
.row-detail {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}
.tag { color: #555; }
.divider { margin: 0 8rpx; color: #ddd; font-size: 20rpx;}
.score { font-weight: bold; color: #4a7c59; }

.row-time {
  font-size: 22rpx;
  color: #999;
}

/* 右侧区域 */
.card-right {
  margin-left: 20rpx;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
  min-width: 80rpx;
}

.status-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  text-align: right;
  padding-right: 20rpx;
}

.use-btn {
  background: #df6e81;
  color: white;
  font-size: 35rpx;
  padding: 5rpx 1rpx;
  border-radius: 30rpx;
  margin: 0;
  line-height: 1.5;
  max-width: 150rpx;
  height: 60rpx;
}

.redemption-time {
  font-size: 22rpx;
  color: #666;
  margin-top: 6rpx;
}

.status-text {
  font-size: 26rpx;
  font-weight: bold;
}
.card.used .status-text { color: #4a7c59; }
.card.expired .status-text { color: #999; }

/* ==================== 个人信息模块 ==================== */
.profile-section {
  background: linear-gradient(135deg, #f8faf9 0%, #e8f5e9 100%);
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  margin: 0 0 15rpx 0;
  border: 1rpx solid #d4e5d8;
  width: 100%;
  box-sizing: border-box;
}

/* 展示模式 */
.profile-display {
  display: flex;
  align-items: center;
}

.profile-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 2rpx solid #4a7c59;
  flex-shrink: 0;
}

.profile-details {
  margin-left: 16rpx;
  flex: 1;
}

.profile-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #4a7c59;
  display: block;
}

.profile-hint {
  font-size: 20rpx;
  color: #888;
}

.profile-edit-btn {
  background: #4a7c59;
  color: white;
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  line-height: 1.5;
  margin: 0;
  min-width: 0;
  width: auto;
  flex-shrink: 0;
}

.profile-edit-btn:active {
  background: #3a6346;
}

/* 编辑模式 */
.profile-edit {
  padding: 0;
}

.edit-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.avatar-btn {
  display: flex;
  align-items: center;
  background: transparent;
  padding: 0;
  margin: 0;
  border: none;
  line-height: normal;
  flex-shrink: 0;
}

.avatar-btn::after {
  border: none;
}

.avatar-preview {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 2rpx solid #4a7c59;
}

.avatar-tip {
  font-size: 20rpx;
  color: #4a7c59;
  margin-left: 10rpx;
}

.field-input {
  flex: 1;
  background: white;
  border: 2rpx solid #d4e5d8;
  border-radius: 12rpx;
  padding: 14rpx 16rpx;
  font-size: 28rpx;
  color: #333;
}

.edit-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.btn-cancel {
  background: white;
  color: #666;
  font-size: 24rpx;
  padding: 10rpx 28rpx;
  border-radius: 20rpx;
  border: 1rpx solid #ddd;
  line-height: 1.5;
  margin: 0;
}

.btn-cancel:active {
  background: #f5f5f5;
}

.btn-save {
  background: #4a7c59;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  padding: 10rpx 28rpx;
  border-radius: 20rpx;
  line-height: 1.5;
  margin: 0;
}

.btn-save:active {
  background: #3a6346;
}
