-  line-height: 1.5;
-  margin: 0;
-  flex-shrink: 0; */

.profile-edit-btn {
  max-width: 150rpx;
  height: 64rpx;
  background: #3b7a4e;
  color: white;
  font-size: 26rpx;
  border-radius: 30rpx;
  letter-spacing: 1px;
  padding: 15rpx;
}

.use-btn {
  max-width: 150rpx;
  height: 64rpx;
  background: #df6e81;
  color: white;
  font-size: 26rpx;
  border-radius: 30rpx;
  letter-spacing: 1px;
  padding: 15rpx;
}

.redemption-time {
  font-size: 22rpx;
  color: #666;
  margin-top: 6rpx;
}

.status-text {
  font-size: 26rpx;
  font-weight: bold;
}
.card.used .status-text { color: #4a7c59; }
.card.expired .status-text { color: #999; }

/* ==================== 分享代金券样式（保持不变） ==================== */
.share-list {
  margin-bottom: 10rpx;
}

.share-card {
  background: linear-gradient(135deg, #fff9e6 0%, #fff3cd 100%);
  border: 1rpx solid #f5d96a;
}

.share-card::before {
  background: #f5a623 !important;
}

.share-card.used {
  background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
  border-color: #e0e0e0;
}

.share-card.expired {
  background: #fafafa;
  border-color: #e0e0e0;
}

.share-prize-name {
  color: #d4760a;
}

.share-badge {
  display: inline-block;
  background: #f5a623;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-left: 12rpx;
  font-weight: normal;
  letter-spacing: 1px;
}

.share-use-btn {
  background: #f5a623;
}

.share-use-btn:active {
  background: #d4760a;
}

/* ==================== 游戏奖品样式（浅粉色底） ==================== */
.game-list {
  margin-bottom: 10rpx;
}

.game-card {
  background: linear-gradient(135deg, #fff5f7 0%, #ffe8ec 100%);
  border: 1rpx solid #f8d0d8;
}

.game-card::before {
  background: #e91e63 !important;
}

.game-card.pending::before {
  background: #e91e63 !important;
}

.game-card.used {
  background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
  border-color: #e0e0e0;
}

.game-card.used::before {
  background: #4a7c59 !important;
}

.game-card.expired {
  background: #fafafa;
  border-color: #e0e0e0;
}

.game-card.expired::before {
  background: #ccc !important;
}

/* 游戏奖品核销按钮（深粉色） */
.game-use-btn {
  background: #e91e63;
}

.game-use-btn:active {
  background: #c2185b;
}
