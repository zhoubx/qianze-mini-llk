/* pages/prizes/prizes.wxss */
.container { 
  padding: 20rpx; 
  background: #f4f7f6; 
  min-height: 100vh;
}

.list { width: 100%; }
.empty { text-align: center; color: #999; margin-top: 100rpx; font-size: 28rpx; }

.card {
  background: white;
  padding: 24rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  position: relative;
  overflow: hidden;
}

/* 左侧状态条 */
.card::before {
  content: ''; position: absolute; left: 0; top: 0; bottom: 0; width: 8rpx;
}
.card.pending::before { background: #d4a017; }
.card.used::before { background: #4a7c59; }
.card.expired::before { background: #ccc; }

/* 整体变灰效果 */
.card.expired { opacity: 0.6; background: #fafafa; }
.card.used { opacity: 0.8; background: #fcfcfc; }

.card-left {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.prize-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

/* 数据详情行 */
.row-detail {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}
.tag { color: #555; }
.divider { margin: 0 8rpx; color: #ddd; font-size: 20rpx;}
.score { font-weight: bold; color: #4a7c59; }

.row-time {
  font-size: 22rpx;
  color: #999;
}

/* 右侧区域 */
.card-right {
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  min-width: 120rpx;
}

.use-btn {
  background: #d4a017; /* 醒目的核销色 */
  color: white;
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  margin: 0;
  line-height: 1.5;
}

.status-text {
  font-size: 26rpx;
  font-weight: bold;
}
.card.used .status-text { color: #4a7c59; }
.card.expired .status-text { color: #999; }