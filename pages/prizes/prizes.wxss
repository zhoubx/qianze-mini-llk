/* pages/prizes/prizes.wxss */
.container {
  padding: 20rpx;
  background: #f4f7f6;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* ==================== 用户信息卡片 ==================== */
.user-card {
  background: linear-gradient(135deg, #4a7c59, #3a6346);
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  margin: 0 10rpx 15rpx 10rpx;
  box-shadow: 0 6rpx 20rpx rgba(74, 124, 89, 0.3);
}

/* 展示模式 */
.user-info-display {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.user-details {
  flex: 1;
  margin-left: 20rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 6rpx;
}

.user-tip {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.edit-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  line-height: 1.5;
}

.edit-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

/* 编辑模式 */
.user-info-edit {
  padding: 10rpx 0;
}

.edit-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.edit-label {
  width: 80rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: bold;
}

.avatar-picker {
  display: flex;
  align-items: center;
  background: transparent;
  padding: 0;
  margin: 0;
  border: none;
  line-height: normal;
}

.avatar-picker::after {
  border: none;
}

.edit-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
}

.avatar-tip {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-left: 15rpx;
}

.nickname-input {
  flex: 1;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  color: #333;
}

.edit-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 10rpx;
}

.cancel-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  font-size: 26rpx;
  padding: 14rpx 36rpx;
  border-radius: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  line-height: 1.5;
}

.save-btn {
  background: white;
  color: #4a7c59;
  font-size: 26rpx;
  font-weight: bold;
  padding: 14rpx 36rpx;
  border-radius: 30rpx;
  line-height: 1.5;
}

.save-btn:active {
  background: #f0f0f0;
}

/* ==================== 页面标题 ==================== */
.page-header {
  text-align: center;
  padding: 15rpx 30rpx 10rpx 10rpx;
  background: rgb(255, 255, 255);
  border-radius: 16rpx;
  margin: 0rpx 10rpx 10rpx 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  width: calc(100% - 40rpx);
}

.header-main {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 4rpx;
}

.header-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.header-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #4a7c59;
}

.header-subtitle {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  font-size: 20rpx;
  color: #666;
  line-height: 1.4;
}

.header-subtitle text {
  display: block;
}

/* ==================== 奖品列表 ==================== */
.list {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
}
.empty { text-align: center; color: #999; margin-top: 100rpx; font-size: 28rpx; }

.card {
  background: white;
  padding: 24rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  position: relative;
  overflow: hidden;
}

/* 左侧状态条 */
.card::before {
  content: ''; position: absolute; left: 0; top: 0; bottom: 0; width: 8rpx;
}
.card.pending::before { background: #d4a017; }
.card.used::before { background: #4a7c59; }
.card.expired::before { background: #ccc; }

/* 整体变灰效果 */
.card.expired { opacity: 0.6; background: #fafafa; }
.card.used { opacity: 0.8; background: #fcfcfc; }

.card-left {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.prize-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

/* 数据详情行 */
.row-detail {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}
.tag { color: #555; }
.divider { margin: 0 8rpx; color: #ddd; font-size: 20rpx;}
.score { font-weight: bold; color: #4a7c59; }

.row-time {
  font-size: 22rpx;
  color: #999;
}

/* 右侧区域 */
.card-right {
  margin-left: 20rpx;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
  min-width: 80rpx;
}

.status-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  text-align: right;
  padding-right: 20rpx;
}

.use-btn {
  background: #df6e81; /* 醒目的核销色 */
  color: white;
  font-size: 35rpx;
  padding: 5rpx 1rpx;
  border-radius: 30rpx;
  margin: 0;
  line-height: 1.5;
  max-width: 150rpx;
  height: 60rpx;
}

.redemption-time {
  font-size: 22rpx;
  color: #666;
  margin-top: 6rpx;
}

.status-text {
  font-size: 26rpx;
  font-weight: bold;
}
.card.used .status-text { color: #4a7c59; }
.card.expired .status-text { color: #999; }
