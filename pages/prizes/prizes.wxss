/* pages/prizes/prizes.wxss */
.container {
  padding: 20rpx;
  background: #f4f7f6;
  min-height: 100vh;
  display: block;
  flex-direction: column;
}

/* ==================== 页面标题（最外层） ==================== */
.page-header {
  padding: 30rpx 24rpx 30rpx 30rpx;
  margin: -20rpx -20rpx -15rpx -20rpx;
  /* padding-top: 44rpx; */
  background: linear-gradient(180deg, #e9f5ec 0%, #c8e6c9 90%);
  border-radius: 60rpx 60rpx 0 0 ;
}

.header-main {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.header-icon {
  font-size: 44rpx;
  margin-right: 12rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #4a7c59;
}

.header-tips {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.tip-dot {
  color: #4a7c59;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.tip-text {
  margin-top: 2px; 
  margin-right: -40rpx;
}

.tip-highlight .tip-dot {
  color: #f57c00;
}

.tip-highlight .tip-text {
  color: #f57c00;
  font-weight: 500;
}

/* 立刻邀请按钮 */
.invite-btn {
  display: inline-flex;
  max-width: 140rpx;
  height: 42rpx;
  letter-spacing: 1rpx;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #e9a15a 0%, #ff9800 10%);
  color: white;
  font-size: 22rpx;
  font-weight: bold;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  margin-left: 16rpx;
  border: none;
  /* box-shadow: 0 4rpx 12rpx rgba(245, 124, 0, 0.3); */
  flex-shrink: 0;
  line-height: 1.4;
}

.invite-btn::after {
  border: none;
}

.invite-btn:active {
  background: linear-gradient(135deg, #e65100 0%, #f57c00 100%);
  transform: scale(0.96);
}

/* ==================== 大包裹容器 ==================== */
.main-wrapper {
  background: #fff;
  border-radius: 64rpx;
  padding: 24rpx;
  margin: 0 10rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
}

/* ==================== 分割线 ==================== */
.section-divider {
  height: 1rpx;
  background: linear-gradient(to right, transparent, #e0e0e0, transparent);
  margin: 20rpx 0 24rpx;
}

/* ==================== 个人信息模块 ==================== */
.profile-section {
  background: linear-gradient(135deg, #f8faf9 0%, #e8f5e9 100%);
  border-radius: 6rpx;
  padding: 26rpx 50rpx 10rpx 30rpx;
  margin-left: 15rpx;
  /* border: 0rpx solid #d4e5d8; */
  width: 96%;
  box-sizing: border-box;
  height: 95px;
}

/* 展示模式 */
.profile-display {
  display: flex;
  align-items: center;
}

/* 头像容器 */
.profile-avatar-container {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid #4a7c59;
  overflow: hidden;
  flex-shrink: 0;
  box-sizing: border-box;
}

.profile-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 头像占位符 - 照相机图标 */
.profile-avatar-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #f5f5f5 0%, #eaeaea 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.camera-icon {
  font-size: 40rpx;
  opacity: 0.35;
}

.profile-details {
  margin-left: 16rpx;
  flex: 1;
}

.profile-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #4a7c59;
  display: block;
}

.profile-hint {
  font-size: 23rpx;
  color: #888;
}

.profile-edit-btn {
  max-width: 150rpx;
  height: 64rpx;
  background: #3b7a4e;
  color: white;
  font-size: 26rpx;
  border-radius: 30rpx;
  letter-spacing: 2px;
}

.profile-edit-btn:active {
  background: #3a6346;
}

/* 编辑模式 */
.profile-edit {
  padding: 0;
  height: 95px;
}

.edit-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.avatar-btn {
  height: 100rpx;
  width: 100rpx;
  display: flex;
  align-items: center;
  background: transparent;
  padding: 0;
  margin: 0;
  border: none;
  line-height: normal;
  flex-shrink: 0;
}

.avatar-btn::after {
  border: none;
}

/* 编辑模式头像容器 */
.avatar-preview-container {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2rpx solid #4a7c59;
  overflow: hidden;
  box-sizing: border-box;
}

.avatar-preview {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-preview-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #f5f5f5 0%, #eaeaea 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.avatar-tip {
  font-size: 30rpx;
  color: #4a7c59;
  margin-left: 10rpx;
  letter-spacing: 1px;
}

.field-input {
  flex: 1;
  background: white;
  border: 2rpx solid #d4e5d8;
  border-radius: 12rpx;
  padding: 14rpx 16rpx;
  font-size: 28rpx;
  color: #333;
}

.edit-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.btn-cancel {
  background: white;
  color: #666;
  font-size: 24rpx;
  padding: 10rpx 28rpx;
  border-radius: 20rpx;
  border: 1rpx solid #ddd;
  line-height: 1.5;
  margin: 0;
}

.btn-cancel:active {
  background: #f5f5f5;
}

.btn-save {
  background: #4a7c59;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  padding: 10rpx 28rpx;
  border-radius: 20rpx;
  line-height: 1.5;
  margin: 0;
}

.btn-save:active {
  background: #3a6346;
}

/* ==================== 分类标题 ==================== */
.section-header {
  align-self: center;
  align-items: center;
  padding: 16rpx 0 12rpx;
}

.section-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.section-subtitle {
  font-size: 22rpx;
  color: #999;
  margin-left: 12rpx;
}

/* ==================== 奖品列表 ==================== */
.list {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.empty { 
  text-align: center; 
  color: #999; 
  margin-top: 60rpx; 
  margin-bottom: 40rpx;
  font-size: 28rpx; 
}

.empty-link {
  display: inline;
  color: #4a7c59;
  font-weight: bold;
  text-decoration: underline;
  padding-left: 4rpx;
  padding-right: 4rpx;
  letter-spacing: 1px;
}

.card {
  background: white;
  padding: 24rpx 30rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  position: relative;
  overflow: hidden;
}

/* 左侧状态条 */
.card::before {
  content: ''; position: absolute; left: 0; top: 0; bottom: 0; width: 8rpx;
}
.card.pending::before { background: #d4a017; }
.card.used::before { background: #4a7c59; }
.card.expired::before { background: #ccc; }

/* 整体变灰效果 */
.card.expired { opacity: 0.6; background: #fafafa; }
.card.used { opacity: 0.8; background: #fcfcfc; }

.card-left {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.prize-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  letter-spacing: 1px;
}

/* 数据详情行 */
.row-detail {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
  padding-top: 8rpx;
}
.tag { color: #555; }
.divider { margin: 0 8rpx; color: #ddd; font-size: 20rpx;}

.row-time {
  padding-top: 8rpx;
  font-size: 22rpx;
  color: #999;
}

/* 右侧区域 */
.card-right {
  margin-left: 20rpx;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
  min-width: 80rpx;
}

.status-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  text-align: right;
  padding-right: 20rpx;
}

