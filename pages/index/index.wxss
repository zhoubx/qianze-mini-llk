  align-items: center;
}

/* 图片预加载提示 */
.preload-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #e8f5e9, #c8e6c9);
  border-radius: 30rpx;
