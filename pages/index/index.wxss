/* ==================== 资源加载遮罩样式 ==================== */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #f5f7fa 0%, #e8f5e9 50%, #f5f7fa 100%);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
  background: white;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(74, 124, 89, 0.15);
  min-width: 400rpx;
}

/* 加载动画 - 三个跳动的点 */
.loading-spinner {
  width: 120rpx;
  height: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.loading-spinner::before,
.loading-spinner::after {
  content: '';
  width: 24rpx;
  height: 24rpx;
  background: linear-gradient(135deg, #4a7c59, #81c784);
  border-radius: 50%;
  animation: loadingBounce 0.6s infinite alternate;
}

.loading-spinner::before {
  animation-delay: 0s;
}

.loading-spinner::after {
  animation-delay: 0.2s;
}

@keyframes loadingBounce {
  0% {
    transform: translateY(0) scale(1);
    opacity: 0.6;
  }
  100% {
    transform: translateY(-20rpx) scale(1.2);
    opacity: 1;
  }
}

/* 中间的点用伪元素无法实现，使用背景模拟 */
.loading-spinner {
  background: radial-gradient(circle at 50% 50%, #4a7c59 0%, #4a7c59 12rpx, transparent 12rpx);
  background-size: 24rpx 24rpx;
  background-repeat: no-repeat;
  background-position: center;
  animation: loadingMiddleDot 0.6s infinite alternate 0.1s;
}

@keyframes loadingMiddleDot {
  0% {
    background-position: center calc(50% + 0rpx);
  }
  100% {
    background-position: center calc(50% - 20rpx);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #4a7c59;
  font-weight: bold;
  letter-spacing: 2rpx;
  margin-bottom: 24rpx;
}

.loading-progress-bar {
  width: 280rpx;
  height: 12rpx;
  background: #e8f5e9;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.loading-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4a7c59, #81c784);
  border-radius: 6rpx;
  transition: width 0.3s ease-out;
}

.loading-percent {
  font-size: 24rpx;
  color: #81c784;
  font-weight: bold;
}

