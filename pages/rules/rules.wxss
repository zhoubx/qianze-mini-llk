page { background: #f4f7f6; }

.container {
  display: block;
  padding: 20rpx 40rpx;
  min-height: 100vh;
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #4a7c59;
  margin-bottom: 32rpx;
  display: block;
  text-align: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.section {
  margin-bottom: 32rpx;
  padding: 0 8rpx;
}

.h2 {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
  padding-left: 8rpx;
  border-left: 4rpx solid #4a7c59;
  padding-left: 16rpx;
}

.p {
  font-size: 26rpx;
  color: #666;
  line-height: 1.7;
  display: block;
  margin-bottom: 12rpx;
  text-align: justify;
  padding-left: 16rpx;
}

.highlight {
  color: #d4a017;
  font-weight: bold;
}