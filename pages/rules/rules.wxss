page { background: #f4f7f6; }

.container {
  display: block;
  padding: 20rpx 20rpx;
  min-height: 100vh;
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #4a7c59;
  margin-bottom: 32rpx;
  display: block;
  text-align: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
}

.section {
  margin-bottom: 32rpx;
  padding: 0 8rpx;
}

.h2 {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
  padding-left: 8rpx;
  border-left: 4rpx solid #4a7c59;
  padding-left: 16rpx;
}

.p {
  font-size: 26rpx;
  color: #666;
  line-height: 1.7;
  display: block;
  margin-bottom: 12rpx;
  text-align: justify;
  padding-left: 16rpx;
}

.highlight {
  color: #d4a017;
  font-weight: bold;
}

.sub-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #4a7c59;
  display: block;
  margin-top: 20rpx;
  margin-bottom: 12rpx;
  padding-left: 16rpx;
}

.indent {
  padding-left: 32rpx;
}

.difficulty-box {
  background: #f0f8f4;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  margin: 12rpx 0 20rpx 16rpx;
  border-left: 4rpx solid #4a7c59;
}

.difficulty-item {
  font-size: 24rpx;
  color: #666;
  line-height: 2;
  display: block;
  padding-left: 8rpx;
}

.example-box {
  background: #f8faf9;
  border-left: 4rpx solid #4a7c59;
  padding: 20rpx;
  margin: 16rpx 0;
  margin-left: 16rpx;
  border-radius: 8rpx;
}

.example-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #4a7c59;
  display: block;
  margin-bottom: 12rpx;
}

.example-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  display: block;
  margin-bottom: 8rpx;
  padding-left: 8rpx;
}

.example-result {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-top: 12rpx;
  padding: 12rpx;
  background: white;
  border-radius: 6rpx;
  border: 1rpx dashed #4a7c59;
}

.score-highlight {
  color: #d4a017;
  font-size: 28rpx;
  font-weight: bold;
}

.tip {
  background: #fff9e6;
  border-left: 4rpx solid #d4a017;
  padding: 16rpx;
  margin-top: 20rpx;
  margin-left: 16rpx;
  border-radius: 8rpx;
  color: #666;
  font-size: 24rpx;
  line-height: 1.6;
  display: block;
}

/* 展开链接样式（小巧） */
.toggle-link {
  display: inline-flex;
  align-items: center;
  margin: 12rpx 0 8rpx 16rpx;
  padding: 6rpx 0;
}

.toggle-link:active {
  opacity: 0.7;
}

.toggle-link-text {
  color: #4a7c59;
  font-size: 24rpx;
  text-decoration: underline;
}

.toggle-link-icon {
  color: #4a7c59;
  font-size: 20rpx;
  margin-left: 6rpx;
}

/* 底部收起链接 */
.collapse-link {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 24rpx 0 8rpx 0;
  padding: 12rpx 0;
  border-top: 1rpx dashed #ddd;
}

.collapse-link:active {
  opacity: 0.7;
}

.collapse-link-text {
  color: #999;
  font-size: 24rpx;
}

.collapse-link-icon {
  color: #999;
  font-size: 20rpx;
  margin-right: 6rpx;
}

/* 可折叠区域 */
.collapsible {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.4s ease-out, opacity 0.3s ease;
  opacity: 0;
}

.collapsible.expanded {
  max-height: 3000rpx;
  opacity: 1;
  transition: max-height 0.5s ease-in, opacity 0.3s ease;
}
